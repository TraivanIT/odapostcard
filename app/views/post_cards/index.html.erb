<section class="details-card">
    <div class="container">
        <div class="row">
            <% @post_cards.each do |post_card|%>
                <div class="col-md-4 col-md-4-custome ">
                    <div class="card-content">
                        <div class="card-img">
                            <%= image_tag post_card.post_card_thumb_image.url %>
                            <span><h4><%= number_to_currency post_card.post_card_price%></h4></span>
                        </div>
                        <div class="card-desc">
                            <h5><%= post_card.post_card_name%></h5>
                            <p>Lorem ipsum dolor sit amet consectetur, adipisicing elit. Laboriosam, voluptatum! Dolor quo, perspiciatis
                                voluptas totam</p>
                            <%= link_to "See more", post_card_path(post_card.id), class: "btn-card"%>  
                        </div>
                    </div>
                </div>
            <% end %>
        </div>
    </div>
</section>


